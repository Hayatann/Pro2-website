---
const { src, reverseVideo = false } = Astro.props
---

<section class="my-64">
  <div class="container">
    <div class="grid grid-cols-1 gap-24 md:grid-cols-2">
      {!reverseVideo ? <video controls muted class="rounded-lg" src={src} /> : ''}
      <div class="space-content flex flex-col justify-center">
        <slot />
      </div>
      {reverseVideo ? <video controls muted class="rounded-lg" src={src} /> : ''}
    </div>
  </div>
</section>
